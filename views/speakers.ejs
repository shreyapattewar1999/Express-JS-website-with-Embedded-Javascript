<div class="container mt-4">
  <div class="row">
    <div class="col-sm-8">
      <article class="speakerslist maincontent">
        <% speakers.forEach(function(currentSpeaker) {%>
        <div class="mb-4">
          <h4 class="speakerslist-title"><%= currentSpeaker.title %></h4>
          <div class="speakerslist-name">
            with
            <a href="/speakers/<%= currentSpeaker.shortname%>"><%= currentSpeaker.name%></a>
          </div>
          <div class="row speakerslist-info mt-2">
            <div class="col-sm-3">
              <a href="/speakers/<%= currentSpeaker.shortname%>">
                <img
                  class="speakerslist-img rounded-circle img-fluid"
                  src="/images/speakers/<%= currentSpeaker.shortname %>_tn.jpg"
                  alt="Photo of <%= currentSpeaker.name %>"
                />
              </a>
            </div>
            <div class="col-sm-9"><%= currentSpeaker.summary%></div>
          </div>
        </div>
        <%}); %>
      </article>
    </div>
    <aside class="col-sm-4">
      <article class="sidebar">
        <h1 class="sidebar-title">Artwork on display</h1>
        <p class="sidebar-body">
          While you attend the conference, head over to our gallery where you can check out some of
          the work from our speakers.
        </p>
        <%- include('./partials/artworks') %>
      </article>
    </aside>
  </div>
</div>
